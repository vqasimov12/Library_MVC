@model CourseAddViewModel

@{
    Layout = "~/Views/Shared/CourseLayout.cshtml";
}

<div class="container" style="display: flex; align-items: start; justify-content: center; margin-top:-20px;">
    <div class="form-container" style="width: 80%; max-width: 800px;">
        <form asp-controller="Course" method="post" asp-action="Add" enctype="multipart/form-data">

            <div style="text-align: center; margin-bottom: 20px;">
                <img src="/Images/@Model.Course.CourseImage"
                     alt="Course Image"
                     style="width:150px;height:150px;object-fit:cover;border-radius:5px;" />
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.Course.Name"></label>
                        <input class="form-control my-1" asp-for="@Model.Course.Name" />
                        <span asp-validation-for="@Model.Course.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Course.Duration"></label>
                        <input class="form-control my-1" asp-for="@Model.Course.Duration" />
                        <span asp-validation-for="@Model.Course.Duration" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Course.RequiredSkills"></label>
                        <input class="form-control my-1" asp-for="@Model.Course.RequiredSkills" />
                        <span asp-validation-for="@Model.Course.RequiredSkills" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Course.Mentor"></label>
                        <input class="form-control my-1" asp-for="@Model.Course.Mentor" />
                        <span asp-validation-for="@Model.Course.Mentor" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.Course.Price"></label>
                        <input class="form-control my-1" type="number" step="0.01" asp-for="@Model.Course.Price" />
                        <span asp-validation-for="@Model.Course.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group d-none">
                        <label asp-for="@Model.Course.Id"></label>
                        <input class="form-control my-1" type="number" step="0.01" asp-for="@Model.Course.Id" />
                        <span asp-validation-for="@Model.Course.Id" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Course.CourseLink"></label>
                        <input class="form-control my-1" asp-for="@Model.Course.CourseLink" />
                        <span asp-validation-for="@Model.Course.CourseLink" class="text-danger"></span>
                        <small class="text-muted">Provide a YouTube link or image URL.</small>
                    </div>

                    <div class="form-group">
                        <label for="image">Select Course Image</label>
                        <input type="file" id="image" name="CourseImageFile" accept="image/*" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="btn-container" style="display: flex; justify-content: center; margin-top: 20px;">
                <a asp-controller="Course" asp-action="Index" class="btn btn-secondary" style="margin-right: 10px;">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>
